generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id
  email               String?
  name                String?
  bio                 String?
  wallet              String    @unique
  twitter             String?
  farcaster           String?
  chainType           String?   @default("ethereum")
  vouchesAvailables   Int       @default(3)
  vouchReset          DateTime?
  createdAt           DateTime  @default(now())
  rankScore           Int       @default(0)
  attestationsDone    Int       @default(0)
  attestationReceived Int       @default(0)
  avatarType          String    @default("blockies")
  Zupass              Zupass?
}

model Zupass {
  user        User   @relation(fields: [userId], references: [id])
  userId      String @unique
  email       String
  nullifier   String
  groups      String
  semaphoreId String @unique
  issuer      String
}
